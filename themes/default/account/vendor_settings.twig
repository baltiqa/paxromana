{% extends "account.master" %}

{% block user_area %}
	<div id="content">
		{% include 'account.head_vendor_bar.twig' %}
		<div style="margin-bottom: 50%;" class="mp-Card mp-Card--rounded">
			<div class="mp-Card-block">
				<form method="POST" action="{{ route('account.update.store') }}" accept-charset="UTF-8" enctype="multipart/form-data">
					{{ csrf_field() }}
					<div class="edit-profile-block clear-fix">
						{% if app.session.get('message') %}
							<div id="msg-saved-seller" class="mp-Alert mp-Alert--success">
								<span class="mp-Alert-icon mp-svg-checkmark-circled-white"></span>
								<div>
									{{ app.session.get('message') }}
								</div>
							</div>
						{% endif %}

						<div class="form-field">
							<h3 class="heading heading-3">
								<b>{{ __('messages.listing_toc')}}</b>
							</h3>
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_1')}}</span>
							<textarea style="height:150px;" class="mp-Textarea " id="terms" name="terms">{{auth_user().terms_conditions}}</textarea>
						</div>
						<div class="form-field">
							<h3 class="heading heading-3">
								<b>{{ __('messages.profile_vendor_settings_title_2')}}</b>
							</h3>
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_2')}}</span>
							<div class="mp-Select ">
								<select class="" name="holiday">
									<option value="0" {{ auth_user().on_vacation == 0 ? 'selected="selected"' : ''}}>{{ __('messages.carts_no')}}</option>
									<option value="1" {{ auth_user().on_vacation == 1 ? 'selected="selected"' : ''}}>{{ __('messages.carts_yes')}}</option>
								</select>
							</div>
						</div>

						<div class="form-field">
							<h3 class="heading heading-3">
								<b>{{ __('messages.profile_vendor_settings_title_3')}} Bitcoin</b>
							</h3>
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_3')}}</span>
							<div class="mp-Select ">
								<select class="" name="bitcoin">
									<option value="0" {{ auth_user().support_bitcoin == 0 ? 'selected="selected"' : ''}}>{{ __('messages.carts_no')}}</option>
									<option value="1" {{ auth_user().support_bitcoin == 1 ? 'selected="selected"' : ''}}>{{ __('messages.carts_yes')}}</option>
								</select>
							</div>
						</div>

						<div class="form-field">
							<h3 class="heading heading-3">
								<b>{{ __('messages.profile_vendor_settings_title_3')}} Monero</b>
							</h3>
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_4')}}</span>
							<div class="mp-Select ">
								<select class="" name="monero">
									<option value="0" {{ auth_user().support_monero == 0 ? 'selected="selected"' : ''}}>{{ __('messages.carts_no')}}</option>
									<option value="1" {{ auth_user().support_monero == 1 ? 'selected="selected"' : ''}}>{{ __('messages.carts_yes')}}</option>
								</select>
							</div>
						</div>

						<div class="form-field">
							<h3 class="heading heading-3">
								<b>{{ __('messages.profile_vendor_settings_title_3')}} Litecoin</b>
							</h3>
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_5')}}</span>
							<div class="mp-Select ">
								<select class="" name="litecoin">
									<option value="0" {{ auth_user().support_litecoin == 0 ? 'selected="selected"' : ''}}>{{ __('messages.carts_no')}}</option>
									<option value="1" {{ auth_user().support_litecoin == 1 ? 'selected="selected"' : ''}}>{{ __('messages.carts_yes')}}</option>
								</select>
							</div>
						</div>

						<div class="form-field">
							<h3 class="heading heading-3">
								<b>{{ __('messages.profile_block_text_5')}}</b>
							</h3>
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_6')}} </span>
							<div style="padding: 15px;background-color: #d9edf7;text-align:center;">
								<a href="/account/multisig">{{ __('messages.profile_vendor_settings_text_7')}}</a>
							</div>
						</div>

						<div class="form-field">
							<h3 class="heading heading-3">
								<b>{{ __('messages.profile_vendor_settings_text_9')}} :
									{% if auth_user().has_fe != 1 %}
										<span style="color:red;">{{ __('messages.listing_visibility_2')}}</span>
									{% else %}
										<span style="color:green;">{{ __('messages.listing_visibility_1')}}</span>
									{% endif %}
								</b>
							</h3>
							{% if auth_user().has_fe != 1 %}
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_8')}}
							  <a href="/account/create/ticket?t=vendor">{{ __('messages.profile_vendor_settings_text_9')}}</a>
							</span>
							{% else %}
							<span class="help-block">{{ __('messages.profile_vendor_settings_text_10')}}</span>
							{% endif %}

							
						</div>

						<div class="form-field">
							<button id="confirm-profile" class="primary medium mp-Button mp-Button--primary">
								<span>{{ __('messages.listing_save')}}</span>
							</button>
							<a id="cancel-profile" href="/account/edit_profile" class="secondary medium mp-Button mp-Button--secondary">
								<span>{{ __('messages.profile_cancel')}}</span>
							</a>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}

