{% extends "layouts.frontpage" %}

{% block css %}
<link href="{{ env('WEBSITE_URL') }}/web/css/index.css" rel="stylesheet">
{% endblock %}
{% block navbar %}
	<header>
		<div class="mp-Header-ribbonTop"></div>
		<div class="mp-Header-ribbonBottom"></div>
	</header>
{% endblock %}

{% block content %}
<div id="page-wrapper">
		<div class="l-page pagelog">
        <section class="l-main-right">
           <a class="pagelogo " href="/" title="Pax Romana"></a>
            {% include 'auth.flags.twig' %}
             <div class="mp-Alert " style="background-color:#D4EFFA;">
							<span class="mp-Alert-icon mp-svg-info"></span>
							<div>
								<li style="color:black;">{{ __('messages.session_title') }}</li>
							</div>
			</div>
            <div class="mp-Card mp-Card--rounded login">
            <div class="mp-Card-block">
                <div class="mp-Form mp-Form--aligned">
                    <div class="mp-Form-body sdk-custom">
                        <form id="account-login-form" method="post" class="new-design-form" action="{{ route('register')}}{{ ref_link }}">
                            {{ csrf_field() }}
                            <div class="form-squeeze">
                            <p>{{ __('messages.register_text')|raw }}</p>
                                <div class="mp-Form-controlGroup">
                                    <label class="optional-label" for="username">{{ __('messages.login_username') }}</label>
                                    <input name="username" value="{{ old('username') }}" placeholder="{{ __('messages.login_username') }}" id="username" class="mp-Input {{ errors.has('username') ? ' invalid' : '' }}" type="text"
                                        maxlength="30" required>
                                        {% if errors.has('username') %}
                                        <div class="mp-Form-controlGroup-validationMessage mp-Form-controlGroup-validationMessage--error">
                                            {{ errors.first('username') }}
                                         </div>
                                        {% endif %}
                                </div>
                                <div class="mp-Form-controlGroup">
                                    <label class="optional-label" for="password">{{ __('messages.login_pasword') }}</label>
                                    <input name="password" id="password" placeholder="{{ __('messages.login_pasword') }}" class="mp-Input {{ errors.has('password') ? ' invalid' : '' }}" type="password" required>
                                    {% if errors.has('password') %}
                                    <div class="mp-Form-controlGroup-validationMessage mp-Form-controlGroup-validationMessage--error">
                                        {{ errors.first('password') }}
                                     </div>
                                    {% endif %}
                                </div>
                                <div class="mp-Form-controlGroup">
                                    <label class="optional-label" for="password_confirmation">{{ __('messages.register_retype_password') }}</label>
                                    <input name="password_confirmation" placeholder="{{ __('messages.register_retype_password') }}" id="password_confirmation" class="mp-Input" type="password" required>
                                </div>
                                <div class="mp-Form-controlGroup">
                                    <label class="optional-label" for="withdrawpin">{{ __('messages.register_withdraw_pin') }}</label>
                                    <input name="withdrawpin" placeholder="{{ __('messages.register_withdraw_pin_placeholder') }}" value="{{ old('withdrawpin') }}" id="withdrawpin" class="mp-Input {{ errors.has('withdrawpin') ? ' invalid' : '' }}" type="text"
                                        maxlength="6" required>
                                        {% if errors.has('withdrawpin') %}
                                        <div class="mp-Form-controlGroup-validationMessage mp-Form-controlGroup-validationMessage--error">
                                            {{ errors.first('withdrawpin') }}
                                         </div>
                                        {% endif %}
                                </div>

                                <div class="mp-Form-controlGroup">
                                    <img src="/captcha.html" />
                                    <input name="captcha" type="text" placeholder="{{ __('messages.login_captcha_text') }}" name="captcha" class="mp-Input {{ errors.has('captcha') ? ' invalid' : '' }}" tabindex="2"required>
                                    {% if errors.has('captcha') %}
                                    <div class="mp-Form-controlGroup-validationMessage mp-Form-controlGroup-validationMessage--error">
                                        {{ errors.first('captcha') }}
                                     </div>
                                    {% endif %}
                                </div>

                                    <div class="mp-Form-controlGroup">
										<a href="/" class="mp-Button mp-Button--primary">
											{{ __('messages.verify_return_back') }}
										</a>
                                            <input type="submit"
                                                class="mp-Button mp-Button--register"
                                                value="{{ __('messages.register_createaccount') }}">
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
	<div class="index-log mp-FooterAlternative ">
						<a  href="http://dreadditevelidot.onion/d/RomanRoad">
							<img width="30" title="Pax Romana Forum" src="/web/images/dread.png"/>
						</a>
						<span class="footer-draw"></span>
							<a  href="http://raptortiabg7uyez.onion/">
							<img width="30" title="Raptor Get your links safely" src="/web/images/raptor.png"/>
						</a>
				</div>
    </div>
</div>

{% endblock %}
