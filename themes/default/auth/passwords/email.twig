{% extends "layouts.app" %}

{% block css %}
<link href="{{ setting('url') }}/web/css/index.css" rel="stylesheet">
{% endblock %}
{% block navbar %}
	<header>
		<div class="mp-Header-ribbonTop"></div>
		<div class="mp-Header-ribbonBottom"></div>
	</header>
{% endblock %}


{% block content %}
	<div id="page-wrapper">
    <div id="content" class="l-page">
		<a class="pagelogo" href="/" title="Pax Romana"></a>
		     {% include 'auth.flags.twig' %}
			 <div class="mp-Alert " style="background-color:#D4EFFA;">
					<span class="mp-Alert-icon mp-svg-info"></span>
					<div>
						<li style="color:black;">{{ __('messages.session_title') }}
						</li>
					</div>
				</div>
			<section id="content">
				<div class="forgot-password-block mp-Card mp-Card--rounded">
				<div class="mp-Card-block ">
                <div id="login-tabs" class="mp-Tab-bar mp-Tab-bar--center sdk-custom">
                    <h3>{{ __('messages.reset_password_title') }}</h3>
             	   </div>
            	</div>
					<div class="mp-Card-block message-block">
						{% if errors.has('username') or errors.has('password')  %}
							<div class="mp-Alert mp-Alert--error">
								<span class="mp-Alert-icon mp-svg-alert--inverse"></span>
								<div>
									<ul>
										<li>{{ __('messages.reset_password_error') }}</li>
									</ul>
								</div>
							</div>
						{% endif %}
						<div class="mp-Form login">
							<p>{{ __('messages.reset_password_text')|raw }}</p>
							<div class="mp-Form-body sdk-custom">
								<form id="forgot-password-form" method="post" action="{{ route('verify_password') }}">
                                      {{ csrf_field() }}
										<div class="mp-Form-controlGroup">
											<label class="optional-label" for="new-password">{{ __('messages.login_username') }}</label>
											<input id="new-password" type="text" name="username" class="mp-Input {{ errors.has('username') ? ' invalid' : '' }}" tabindex="1">
										</div>
										<div class="mp-Form-controlGroup">
											<label class="optional-label" for="new-password">{{ __('messages.mnemonic_mnemonic') }}</label>
											<input id="new-password" type="text" name="mnemonic" class="mp-Input {{ errors.has('mnemonic') ? ' invalid' : '' }}" tabindex="1">
										</div>
									<div id="mp-Form-controlGroup">
										<img src="/captcha.html"/>
										<label class="optional-label" for="captcha">{{ __('messages.login_captcha') }}</label>
										<input id="captcha" type="text" placeholder="{{ __('messages.login_captcha_text') }}" name="captcha" class="mp-Input {{ errors.has('captcha') ? ' invalid' : '' }}" tabindex="2">
										{% if errors.has('captcha') %}
											<div class="mp-Form-controlGroup-validationMessage mp-Form-controlGroup-validationMessage--error">
												{{ errors.first('captcha') }}
											</div>
										{% endif %}
									</div>
								</div>
								<br>
								<div class="mp-Form-controlGroup">
                                            <button class="mp-Button mp-Button--register">
                                                <span>{{ __('messages.reset_password_continue') }}</span>
                                            </button>
                                              <a href="/" class="mp-Button mp-Button--primary">
                                                <span>{{ __('messages.verify_return_back') }}</span>
                                             </a>
                               </div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>
{% endblock %}
{% block footer %}

{% endblock %}

